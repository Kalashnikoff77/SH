@page "/"

<PageTitle>Главная страница</PageTitle>


<MudSelect Placeholder="Все услуги" @bind-SelectedValues="selectedItems" T="CItems" Dense AnchorOrigin="Origin.BottomCenter" Adornment="Adornment.End" IconSize="Size.Medium" MultiSelection Clearable>
    @foreach (var item in items.Where(x => x.IsDeleted == false))
    {
        <MudSelectItem Value="item">@item</MudSelectItem>
    }
</MudSelect>


<MudButton OnClick="OnAdded" Variant="Variant.Outlined" Class="mt-5">Добавить</MudButton>

<MudButton OnClick="OnChanged" Variant="Variant.Outlined" Class="mt-5">Изменить</MudButton>

<MudButton OnClick="OnDeleted" Variant="Variant.Outlined" Class="mt-5">Удалить</MudButton>
