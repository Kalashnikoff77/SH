<span>
    
    @htmlText
    
    @if (!string.IsNullOrWhiteSpace(Text) && Text.Length > MaxTextLength)
    {
        <span @onclick="OnWrap" @onclick:stopPropagation="true" class="mud-primary-text" style="font-size:14px; font-weight:500; cursor:pointer">
            @(isShortText ? " далее »" : " « скрыть")
        </span>
    }

</span>
