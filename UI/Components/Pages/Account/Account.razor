@page "/account/{AccountId:int}"

@if (account != null)
{
    <PageTitle>Настройки профиля: @account.Name</PageTitle>

    <MudText Align="Align.Left" Typo="Typo.h6" Class="mb-3">Настройки профиля: @account.Name</MudText>
    <MudDivider DividerType="DividerType.FullWidth" Light="false" Class="mb-8" />

    <MudStack Style="min-width:300px; max-width:750px" Class="ml-5">

        <MudTabs Centered ApplyEffectsToContainer PanelClass="pa-6">

            @* ОБЩИЕ *@
            <MudTabPanel Icon="@Icons.Material.Filled.Settings" Text="Общие">
                <Tab_General Account="@account" />
            </MudTabPanel>

            @* ФОТО *@
            <MudTabPanel Icon="@Icons.Material.Filled.Portrait" Text="@(account.Photos == null ? "Фото" : "Фото " + account.Photos.Count)">
                <Tab_Photos Account="@account" />
            </MudTabPanel>

        </MudTabs>

    </MudStack>
}
