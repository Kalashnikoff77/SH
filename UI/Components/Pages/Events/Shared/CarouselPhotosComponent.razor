<MudCarousel @ref="Carousel" TData="PhotosForEventsDto" ShowArrows ShowBullets="false" AutoCycle Style="width:300px; height:400px" Class="mb-3">
    @foreach (var photo in Photos.OrderByDescending(o => o.IsAvatar).ThenByDescending(o => o.CreateDate))
    {
        <MudCarouselItem Transition="Transition.Fade">
            <MudImage Src=@($"/images/EventsPhotos/{photo.RelatedId}/{photo.Guid}/{EnumImageSize.s450x600}.jpg") Fluid Style="border-radius:2%; width:300px; height:400px" />
        </MudCarouselItem>
    }
</MudCarousel>

@code {
    [Parameter, EditorRequired] public IEnumerable<PhotosForEventsDto> Photos { get; set; } = null!;
    MudCarousel<PhotosForEventsDto> Carousel = null!;
}