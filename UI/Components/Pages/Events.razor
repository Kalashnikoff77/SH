@page "/events"
<PageTitle>Мероприятия</PageTitle>

<RadzenText TextStyle="TextStyle.H5" TextAlign="TextAlign.Left">Мероприятия</RadzenText>

@if (EventsList != null)
{
    foreach (var Evt in EventsList)
    {
        <RadzenCard Variant="Variant.Filled" class="rz-my-6" Style="max-width: 750px">
            <RadzenRow Gap="1rem">

                <RadzenColumn SizeXS="3" Size="12" Style="min-width: 150px; text-align: center">
                    <ImageEvent Event="@Evt" Size="@EnumImageSize.s150x150" Title="@Evt.Description" Style="border-radius: 5%" />
                </RadzenColumn>

                <RadzenColumn>
                    <RadzenStack Gap="0">
                        <RadzenText TextStyle="TextStyle.H6"><b>@Evt.Name</b></RadzenText>

                        <RadzenStack Gap="5" AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal">
                            <RadzenIcon Icon="radar" />
                            <RadzenText TextStyle="TextStyle.Body2">@Evt.ToRegionString()</RadzenText>
                        </RadzenStack>

                        <RadzenStack Gap="5" AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal">
                            <RadzenIcon Icon="calendar_month" />
                            <RadzenText TextStyle="TextStyle.Body2" class="@Evt.ToDateClass()">
                                <b>@Evt.StartDate.ToMyString() - @Evt.EndDate.ToMyString()</b>
                            </RadzenText>
                        </RadzenStack>

                        <RadzenStack Gap="5" title="Организатор" AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal">
                            <RadzenIcon Icon="group" />
                            <RadzenText TextStyle="TextStyle.Body2"><b>@Evt.Admin?.Name</b></RadzenText>
                        </RadzenStack>

                        <RadzenStack Gap="5" AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal">
                            <RadzenIcon Icon="how_to_reg" />
                            <RadzenText TextStyle="TextStyle.Body2">
                                Зарегистрированы: <span class="sw-event-registered-@Evt.Id">@Evt.NumOfRegisters</span>
                            </RadzenText>
                        </RadzenStack>

                        <RadzenText TextStyle="TextStyle.Body2"><i>@Evt.ToShortDescription()</i></RadzenText>

                    </RadzenStack>

                </RadzenColumn>
            </RadzenRow>
        </RadzenCard>
    }
}
