@if (Account.Photos != null)
{
    <MudStack Row Wrap="Wrap.Wrap" Spacing="0" Justify="Justify.SpaceEvenly">
        @foreach (var photo in Account.Photos.OrderByDescending(o => o.Id))
        {
            <MudPaper Outlined class="pa-3 mb-8">
                <MudStack AlignItems="AlignItems.Center">
                    <MudImage Width="250" Height="250" Src="@("/images/AccountsPhotos/" + Account.Id + "/" + photo.Guid + "/" + EnumImageSize.s250x250.ToString() + ".jpg")" />
                    <MudText>@photo.Comment</MudText>
                </MudStack>
            </MudPaper>
        }
    </MudStack>
}

